<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ContraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/menuBtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.041"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022"
        app:srcCompat="@drawable/menulight" />

    <ImageView
        android:id="@+id/status"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="128dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/statusoklight" />

    <ImageView
        android:id="@+id/infoBtn"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitXY"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintStart_toStartOf="@+id/status"
        app:layout_constraintTop_toBottomOf="@+id/status"
        app:srcCompat="@drawable/btnlight" />

    <ImageView
        android:id="@+id/reportBtn"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitXY"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintEnd_toEndOf="@+id/status"
        app:layout_constraintTop_toBottomOf="@+id/status"
        app:srcCompat="@drawable/btnredlight" />

    <ImageView
        android:id="@+id/devicesBtn"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:scaleType="fitXY"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintEnd_toEndOf="@+id/status"
        app:layout_constraintStart_toStartOf="@+id/status"
        app:layout_constraintTop_toBottomOf="@+id/infoBtn"
        app:srcCompat="@drawable/btnlight" />

    <de.bittim.bitwarn.GradientTextView
        android:id="@+id/moreInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bold"
        android:text="More Info"
        android:textSize="16sp"
        app:primaryColor="@color/blueAccent"
        app:secondaryColor="@color/blueDarker"
        app:layout_constraintBottom_toBottomOf="@+id/infoBtn"
        app:layout_constraintEnd_toEndOf="@+id/infoBtn"
        app:layout_constraintStart_toStartOf="@+id/infoBtn"
        app:layout_constraintTop_toTopOf="@+id/infoBtn" />

    <TextView
        android:id="@+id/report"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bold"
        android:textSize="16sp"
        android:textColor="@color/light"
        android:text="Report"
        app:layout_constraintBottom_toBottomOf="@+id/reportBtn"
        app:layout_constraintEnd_toEndOf="@+id/reportBtn"
        app:layout_constraintStart_toEndOf="@+id/infoBtn"
        app:layout_constraintTop_toTopOf="@+id/reportBtn" />

    <TextView
        android:id="@+id/devices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bold"
        android:text="History"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/devicesBtn"
        app:layout_constraintEnd_toEndOf="@+id/devicesBtn"
        app:layout_constraintStart_toStartOf="@+id/devicesBtn"
        app:layout_constraintTop_toTopOf="@+id/devicesBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>